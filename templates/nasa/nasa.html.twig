{% extends 'base.html.twig' %}

{% block title %}Hello!{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        <h1>Hello there! âœ…</h1>
        {{ form(form) }}
        {% for result in results %}
            <li>
                Image ID {{ result.id }}
                Earth date: {{ result.earthDate.format('Y-m-d') }}
                Camera name: {{ result.cameraName }}
                Rover name: {{ result.roverName }}
                <a href="/nasa-details/{{ result.id }}">Details</a>
            </li>
        {% endfor %}


    </div>
{% endblock %}
